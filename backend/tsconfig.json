{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "build",
    "rootDir": ".",
    "baseUrl": "."
  },
  "exclude": [
    "node_modules",
    "prisma",
    "build",
    "tests"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.d.ts"
  ]
}